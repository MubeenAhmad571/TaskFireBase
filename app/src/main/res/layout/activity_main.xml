<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_one"
        android:background="@color/colorPrimary"
        android:text="FireBase Assignment"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        android:gravity="center"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/EMPIDET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter the Employee ID"
        android:layout_centerInParent="true"
        android:layout_below="@id/tv_one"
        android:inputType="text"
        android:maxLength="20"
        android:singleLine="true"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark" />

    <EditText
        android:id="@+id/EMPNAMEET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter the Employee Name"
        android:layout_centerInParent="true"
        android:layout_below="@id/EMPIDET"
        android:inputType="text"
        android:maxLength="20"
        android:singleLine="true"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark" />
    <EditText
        android:id="@+id/EMPSALARYET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter the Employee SALARY"
        android:layout_centerInParent="true"
        android:layout_below="@id/EMPNAMEET"
        android:inputType="text"
        android:maxLength="20"
        android:singleLine="true"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark" />

    <Button
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:id="@+id/btn_one"
        android:background="@drawable/btn_background"
        android:layout_below="@+id/EMPSALARYET"
        android:text="Add Values"
        android:onClick="add_values"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="10dp"/>
    <Button
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:onClick="show_all_collection_data"
        android:id="@+id/btn_two"
        android:background="@drawable/btn_background"
        android:layout_below="@+id/EMPSALARYET"
        android:layout_marginLeft="200dp"
        android:text="Show Collection"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/colorAccent"
        />
    <Button
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:id="@+id/btn_three"
        android:background="@drawable/btn_background"
        android:layout_below="@+id/btn_one"
        android:text="Delete Document"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:onClick="delete_document"/>
    <Button
        android:onClick="delete_all_collection"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:id="@+id/btn_four"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_background"
        android:layout_below="@+id/btn_two"
        android:layout_marginLeft="200dp"
        android:text="Delete Collection"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/colorAccent"
        />
    <TextView
        android:id="@+id/tv_two"
        android:layout_below="@id/btn_three"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:scrollbars="vertical"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        />

</RelativeLayout>